{{# partial "titulo" }}
<title>Patitas - Registrar mascota</title>
{{/partial}}


{{# partial "contenido" }}

<div>
    <section>
        <h2>Registrar mascota</h2>

        <form class="login" action="/mascotas/nueva" method="POST">
            <div class="campo">
                <span class="nombre-campo">Tipo de mascota:</span>
                <div>
                <span>Perro</span><input type="radio" name="tipo mascota" value="Perro">
                <span>Gato</span><input type="radio" name="tipo mascota" value="Gato">
                </div>
            </div>
            <div class="campo">
                <span class="nombre-campo">Nombre de mascota:</span><input type="text" name="Nombre de mascota" placeholder="Ingrese el nombre de su mascota">
                <span class="nombre-campo">Apodo:</span><input type="text" name="Apodo" placeholder="Ingrese el apodo de la mascota">
                <span class="nombre-campo">Tama√±o:</span><input list="tamanio" name="tamanio">
                <datalist id="tamanio">
                    {{#tamanio}}
                    <option value= {{this}}>
                    {{/tamanio}}
                </datalist>
            </div>
            <div class="campo">
                <span class="nombre-campo">Edad aproximada:</span><input type="number" name="Edad aproximada" placeholder="Ingrese la edad">
                <span class="nombre-campo">Sexo:</span><input list="sexo" name="sexo">
                <datalist id="sexo">
                    {{#sexo}}
                    <option value= {{this}}>
                    {{/sexo}}
                </datalist>
            </div>
            <div class="campo">
                <span class="nombre-campo">Descripcion fisica:</span><input type="text" name="Descripcion fisica" placeholder="Ingrese la descripcion fisica de la mascota">
            </div>
            <div class="campo">
                <span class="nombre-campo">Arrastre las fotos aqui:</span><input type="file" name="fotos" accept="image/*" multiple>
            </div>

            <h3>Caracteristicas</h3>
            {{#caracteristicas}}
            <div class="campo">
                {{#if Opcion-multiple}}
                    <span class="nombre-campo">{{Nombre}}:</span><input list={{Nombre}} name={{Nombre}}>
                    <datalist id={{Nombre}}>
                        {{#each this.Respuestas}}
                        <option value= {{this}}>
                        {{/each}}
                    </datalist>
                {{/if}}
                {{#if Texto}}
                    <span class="nombre-campo">{{Nombre}}:</span><input type="text" name={{Nombre}} placeholder="Ingrese una respuesta">
                {{/if}}
                {{#if Numerica}}
                    <span class="nombre-campo">{{Nombre}}:</span><input type="number" name={{Nombre}} placeholder="Ingrese una respuesta">
                {{/if}}
                {{#if De-respuesta-si-o-no}}
                    <span class="nombre-campo">{{Nombre}}:</span><input type="checkbox" name={{Nombre}}>
                {{/if}}
            </div>
            <!--<div class="campo">
                <span class="nombre-campo">Caract obligatoria 2:</span><input type="text" name="Caracteristica obligatoria" placeholder="Ingrese una caracteristica">
            </div>-->
            {{/caracteristicas}}
            <input class="boton" type="submit" value="Registrar Mascota">
        </form>
    </section>
</div>


