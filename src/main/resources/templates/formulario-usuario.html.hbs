{{# partial "titulo" }}
<title>Patitas - Registrarme</title>
{{/partial}}


{{# partial "contenido" }}

<div>
    <section>
        <h2>Registrarme</h2>

        <form class="formulario" action="/usuarios/nuevo" method="POST">

            <div class="registro">
            <div class="campo">
                <span class="nombre-campo">Nombre:</span><input  required type="text" name="Nombre" placeholder="Ingrese su nombre">
            </div>
            <div class="campo">
                <span class="nombre-campo">Apellido:</span><input  required type="text" name="Apellido" placeholder="Ingrese su apellido">
            </div>
            <div class="campo">
                <span class="nombre-campo">Fecha de Nacimiento:</span><input  required type="date" name="Fecha De Nacimiento">
            </div>
            <div class="campo">
                <span class="nombre-campo">Tipo de Documento:</span><input  required list="tiposDocumento" name="Tipo de Documento">
                <datalist id="tiposDocumento">
                    {{#tipoDocumento}}
                    <option value= {{this}}>
                    {{/tipoDocumento}}
                </datalist>

            </div>
            <div class="campo">
                <span class="nombre-campo">Nro Documento:</span><input required  type="text" name="Numero Documento">
            </div>
            <div class="campo">
                 <span class="nombre-campo">Nombre de usuario:</span><input required  type="text" name="username" placeholder="Ingrese nombre de usuario">
            </div>
            <div class="campo">
                 <span class="nombre-campo">Contraseña:</span><input required  type="password" name="password" placeholder="Ingrese una contraseña">
            </div>
            <h3>Datos de Contacto</h3>
            <div class="campo">
                <span class="nombre-campo">Nombre:</span><input required  type="text" name="nombre" placeholder="Ingrese Nombre">
            </div>
            <div class="campo">
                <span class="nombre-campo">Apellido:</span><input required  type="text" name="apellido" placeholder="Ingrese Apellido">
            </div>
            <div class="campo">
                 <span class="nombre-campo">Telefono:</span><input required  type="tel" name="telefono" placeholder="Ingrese Telefono">
            </div>
            <div class="campo">
                 <span class="nombre-campo">E-mail:</span><input required  type="email" name="email" placeholder="Ingrese Email">
            </div>
            </div>

            <input class="button" type="submit" value="Registrarme">
        </form>

      {{#if usuarioError}}
        <div id="u7" class="ax_default label"  style="margin-top: 15px" data-label="Mensaje de error">
          <p><span>Ha ocurrido un error al intentar registrarse. Por favor intente nuevamente.</span></p>
        </div>
      {{/if}}

    </section>
</div>

{{/partial}}

{{> layout.html.hbs }}