{{# partial "titulo" }}
<title>Patitas - Editar caracteristica</title>
{{/partial}}


{{# partial "contenido" }}

<div>
    <section>
        <h2></h2>
        {{#caracteristica}}
        <form class="forumlario" action="/caracteristicas/{{id}}" method="POST">
            <div class="campo">
                <span class="nombre-campo">Nombre de la caracteristica:</span><input required type="text" name="Nombre de la caracteristica" placeholder="Ingrese el nombre de la caracteristica" value="{{nombre}}">

        {{#if esObligatoria}}
                <span class="nombre-campo">Obligatoria:</span><input type="checkbox" name="obligatoria" checked>
        {{else}}
                <span class="nombre-campo">Obligatoria:</span><input type="checkbox" name="obligatoria">
        {{/if}}

                <span class="nombre-campo">Tipo de caracteristica:</span><input required list="tipoCaracteristica" name="Tipo de caracteristica">
                    <datalist id="tipoCaracteristica">
                        <option value= "Texto">
                        <option value= "Numerica">
                        <option value= "De respuesta si o no">
                        <option value= "Opcion multiple">
                    </datalist>

            </div>

            <h3>Opciones de respuesta</h3>
            <div class="campo">
                <span class="nombre-campo">Opcion 1:</span><input type="text" name="Opcion1" placeholder="Ingrese una posible respuesta">
            </div>
            <div class="campo">
                <span class="nombre-campo">Opcion 2:</span><input type="text" name="Opcion2" placeholder="Ingrese una posible respuesta">
            </div>
            <div class="campo">
                <span class="nombre-campo">Opcion 3:</span><input type="text" name="Opcion3" placeholder="Ingrese una posible respuesta">
            </div>
            <div class="campo">
                <span class="nombre-campo">Opcion 4:</span><input type="text" name="Opcion4" placeholder="Ingrese una posible respuesta">
            </div>
            <input class="button" type="submit" value="Guardar cambios">
        </form>
        {{/caracteristica}}
    </section>
</div>


